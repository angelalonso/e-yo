<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

	<Button
		    android:id="@+id/btn_to_do"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:background="@drawable/tab_bg_inactive"
            android:textColor="@color/tab_inactive_text"
		    android:text="To Do" />

		<Button
		    android:id="@+id/btn_timetable"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:background="@drawable/tab_bg_active"
            android:textColor="@color/tab_active_text"
		    android:text="Timetable" />
</LinearLayout>